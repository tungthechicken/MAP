<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/id_map"
        android:name="com.google.android.gms.maps.SupportMapFragment" android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Thanh tìm kiếm địa điểm -->
    <SearchView
        android:id="@+id/search_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:queryHint="Nhập địa điểm cần tìm"
        android:iconifiedByDefault="false"
        android:background="@drawable/searchview_background" />

    <!-- Nút để đánh dấu trên bản đồ -->
    <Button
        android:id="@+id/btn_add_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh dấu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_show_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hiển thị vị trí"
        android:layout_above="@id/btn_add_marker"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
