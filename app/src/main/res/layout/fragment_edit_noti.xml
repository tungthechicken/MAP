<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editNoti"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/settingtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:background="@color/purple"
            android:textSize="25dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:id="@+id/Action_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/labelAction_base"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Action-base Notifications" />
                <RadioGroup
                    android:id="@+id/radio_group_action_base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_OnAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On" />

                    <RadioButton
                        android:id="@+id/radio_OffAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Off" />
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ModeApp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/labelModeApp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Mode" />

                <RadioGroup
                    android:id="@+id/radio_group_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_normalMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal" />

                    <RadioButton
                        android:id="@+id/radio_vibrationMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vibration" />
                    <RadioButton
                        android:id="@+id/radio_silentMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silent" />
                </RadioGroup>
            </LinearLayout>


        </LinearLayout>
</LinearLayout>