<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/back"
            android:padding="7dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/settingtitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/settingtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_white_boder_purple"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/editProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Profile"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"/>

            <ImageButton
                android:id="@+id/chitiet1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/chi_tiet"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/chi_tiet" />
        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"/>

        <LinearLayout
            android:id="@+id/Noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/Profile">

            <ImageView
                android:id="@+id/imageNoti"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/noti" />

            <TextView
                android:id="@+id/editNoti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Notification" />

            <ImageButton
                android:id="@+id/chitiet2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/chi_tiet"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/chi_tiet" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/Noti">

            <ImageView
                android:id="@+id/imageDisplay"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/display_setting" />

            <TextView
                android:id="@+id/editDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Display" />

            <ImageButton
                android:id="@+id/chitiet3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/chi_tiet"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/chi_tiet" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/display">

            <ImageView
                android:id="@+id/imageUpdate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/update" />

            <TextView
                android:id="@+id/editUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Update"/>

            <ImageButton
                android:id="@+id/chitiet4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/chi_tiet"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/chi_tiet" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/update">

            <ImageView
                android:id="@+id/imagePrivacy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/privacy" />

            <TextView
                android:id="@+id/editPrivacy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Privacy"/>

            <ImageButton
                android:id="@+id/chitiet5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/chi_tiet"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/chi_tiet" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/QaA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/privacy">

            <ImageView
                android:id="@+id/imageQaA"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/question_answer" />

            <TextView
                android:id="@+id/textQaA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Question and Answer" />

            <ImageButton
                android:id="@+id/chitiet6"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/chi_tiet"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/chi_tiet" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/About"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageAbout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/icon_about" />

            <TextView
                android:id="@+id/textAbout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="About"/>

            <ImageButton
                android:id="@+id/chitiet8"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/chi_tiet"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/chi_tiet" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@+id/About">

            <ImageView
                android:id="@+id/imageLogOut"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/log_out" />

            <TextView
                android:id="@+id/textLogOut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Log Out" />

            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/chi_tiet"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/chi_tiet" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>