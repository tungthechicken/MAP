<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:background="@color/purple"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="?attr/selectableItemBackground"
                    app:srcCompat="@drawable/profile" />

                <TextView
                    android:id="@+id/editProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/profile"
                    android:layout_marginStart="5dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeStepGranularity="2sp"/>

                <ImageView
                    android:id="@+id/chitiet1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/chi_tiet" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="10dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/purple"/>

            <LinearLayout
                android:id="@+id/Noti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageNoti"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:background="?attr/selectableItemBackground"
                    app:srcCompat="@drawable/noti" />

                <TextView
                    android:id="@+id/editNoti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/notification" />

                <ImageView
                    android:id="@+id/chitiet2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/chi_tiet" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="10dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/purple"/>
            <LinearLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageAbout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:background="?attr/selectableItemBackground"
                    app:srcCompat="@drawable/icon_about" />

                <TextView
                    android:id="@+id/textAbout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:text="@string/about"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/chi_tiet" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="10dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/purple"/>
            <LinearLayout
                android:id="@+id/QaA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageQaA"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:background="?attr/selectableItemBackground"
                    app:srcCompat="@drawable/question_answer" />

                <TextView
                    android:id="@+id/textQaA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:text="@string/question_and_answer" />

                <ImageView
                    android:id="@+id/chitiet6"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/chi_tiet" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="10dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/purple"/>
            <LinearLayout
                android:id="@+id/logOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                app:layout_constraintTop_toBottomOf="@+id/About">

                <ImageView
                    android:id="@+id/imageLogOut"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:background="?attr/selectableItemBackground"
                    app:srcCompat="@drawable/log_out" />

                <TextView
                    android:id="@+id/textLogOut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:text="@string/log_out" />

                <ImageView
                    android:id="@+id/logoutButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/chi_tiet" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:alpha="0.5"
        android:visibility="gone" />
</LinearLayout>