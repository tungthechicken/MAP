<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15sp"
    android:background="@color/gray"
    android:layout_marginBottom="20dp"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/add_hole" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="ADD NEW A POTHOLE"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/icon_label"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:layout_width="54dp"
            android:layout_height="51dp"
            android:src="@drawable/icon_pothole" />

        <EditText
            android:layout_width="246dp"
            android:layout_height="56dp"
            android:layout_marginLeft="30dp"
            android:hint="Label"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/icon_size"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="51dp"
            android:src="@drawable/icon_size" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Big"
            android:textSize="10sp"
            android:gravity="center" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nomarl"
            android:textSize="10sp"
            android:gravity="center" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Small"
            android:textSize="10sp"
            android:gravity="center" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/icon_depth"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:layout_width="54dp"
            android:layout_height="51dp"
            android:src="@drawable/icon_depth" />

        <EditText
            android:layout_width="246dp"
            android:layout_height="56dp"
            android:layout_marginLeft="30dp"
            android:hint="Depth"
            android:textSize="18sp" />

    </LinearLayout>    <LinearLayout
    android:id="@+id/icon_pothole"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <ImageView
        android:layout_width="54dp"
        android:layout_height="51dp"
        android:src="@drawable/icon_diameter" />

    <EditText
        android:layout_width="246dp"
        android:layout_height="56dp"
        android:layout_marginLeft="30dp"
        android:hint="Diameter"
        android:textSize="18sp" />

</LinearLayout>

</LinearLayout>